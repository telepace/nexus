{
  "name": "nexus-browser-extension",
  "displayName": "Nexus Browser Extension",
  "version": "0.1.0",
  "description": "AI-powered reading assistant that helps you understand, save, and interact with web content.",
  "author": "Nexus Team",
  "scripts": {
    "dev": "plasmo dev",
    "dev:local": "cross-env PLASMO_PUBLIC_API_URL=http://localhost:8000 PLASMO_PUBLIC_FRONTEND_URL=http://localhost:3000 plasmo dev",
    "dev:staging": "cross-env PLASMO_PUBLIC_API_URL=https://api-staging.nexus-app.com PLASMO_PUBLIC_FRONTEND_URL=https://staging.nexus-app.com plasmo dev",
    "build": "plasmo build --no-hoist --no-remote",
    "build:local": "cross-env PLASMO_PUBLIC_API_URL=http://localhost:8000 PLASMO_PUBLIC_FRONTEND_URL=http://localhost:3000 plasmo build --no-hoist --no-remote",
    "build:staging": "cross-env PLASMO_PUBLIC_API_URL=https://api-staging.nexus-app.com PLASMO_PUBLIC_FRONTEND_URL=https://staging.nexus-app.com plasmo build --no-hoist --no-remote",
    "build:prod": "cross-env PLASMO_PUBLIC_API_URL=https://api.nexus-app.com PLASMO_PUBLIC_FRONTEND_URL=https://app.nexus-app.com plasmo build --no-hoist --no-remote",
    "build:offline": "NODE_OPTIONS='--max-old-space-size=4096' plasmo build --no-hoist --no-remote --no-update-check",
    "package": "plasmo package",
    "package:staging": "cross-env PLASMO_PUBLIC_API_URL=https://api-staging.nexus-app.com PLASMO_PUBLIC_FRONTEND_URL=https://staging.nexus-app.com plasmo package",
    "package:prod": "cross-env PLASMO_PUBLIC_API_URL=https://api.nexus-app.com PLASMO_PUBLIC_FRONTEND_URL=https://app.nexus-app.com plasmo package",
    "test": "cd e2e && pnpm test",
    "test:debug": "cd e2e && pnpm test --verbose",
    "test:ui": "cd e2e && pnpm test --watch",
    "test:e2e": "cd e2e && pnpm test",
    "test:coverage": "cd e2e && pnpm test --coverage",
    "build:tailwind": "tailwindcss -i ./styles/globals.css -o ./styles/tailwind.css",
    "dev:with-tailwind": "concurrently \"npm run build:tailwind -- --watch\" \"npm run dev:local\"",
    "build:with-tailwind": "npm run build:tailwind && npm run build",
    "clean": "rm -rf build/ .plasmo/ node_modules/.cache/",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@types/react-router-dom": "^5.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "lucide-react": "^0.511.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^7.6.1",
    "sharp": "0.32.6",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "3.4.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@playwright/test": "^1.53.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "name": "Nexus",
    "description": "AI-powered reading assistant that helps you understand, save, and interact with web content.",
    "version": "0.1.0",
    "permissions": [
      "storage",
      "scripting",
      "unlimitedStorage",
      "activeTab",
      "contextMenus",
      "notifications",
      "cookies",
      "sidePanel"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8000 http://localhost:3000 http://127.0.0.1:8000 http://127.0.0.1:3000 https://* http://*;"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "iframe-ui.html",
          "summary-window.html",
          "save-confirm-window.html",
          "notification-popup.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "Open Nexus AI Assistant"
    }
  }
}
