{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "include": [".plasmo/**/*", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
} 